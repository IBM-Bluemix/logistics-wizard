{
  "parser"  : "babel-eslint",
  "extends" : [
    "airbnb",
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "new-cap": [2, { "capIsNew": false }],
    "max-len": 0
  }
}
